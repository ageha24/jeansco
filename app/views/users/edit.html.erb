<h1>プロフィール更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages',object: f.object %>

      <%= f.label :name,"ユーザー名" %>
      <%= f.text_field :name,class: 'form-control' %>

      <%= f.label :email,"メールアドレス" %>
      <%= f.text_field :email,class: 'form-control' %>

      <%= f.label :gender,"性別" %>
      <%= select_tag 'user[gender]',options_for_select(["男","女"]) %>

      <%= f.label :profileimage,"ユーザー画像" %>
      <%= f.file_field :profileimage %>

      <%= f.label :introduce,"自己紹介" %>
      <%= f.text_area :introduce,class:'form-control',placeholder: "ex 購入日時、履き心地、サイズ感など…" %>

      <%= f.label :password,"パスワードを打ち込んでください" %>
      <%= f.password_field :password,class: 'form-control' %>

      <%= f.label :password_confirmation,"再度パスワードを打ち込んでください" %>
      <%= f.password_field :password_confirmation,class: 'form-control' %>

      <%= f.submit "押してプロフィール更新",class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
